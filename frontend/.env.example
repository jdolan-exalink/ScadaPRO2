# ===========================================
# ScadaPRO2 v0.2.0 - Environment Configuration
# ===========================================
# Copy this file to .env and adjust values for your environment

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database Settings (for full stack deployment)
DB_USER=backend
DB_PASSWORD=backend_pass
DB_NAME=industrial
DB_HOST=db
DB_PORT=5432

# ===========================================
# API CONFIGURATION
# ===========================================
# API Token for external API authentication
API_TOKEN=Ya_3n2CUIdhUbvV1hkT8SMb-TH8rGp1N0rxng9y6dqI

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
# Backend Image (if using pre-built backend image)
# BACKEND_IMAGE=your-registry/scada-backend:latest

# External Backend (for frontend-only deployment)
# BACKEND_HOST=10.147.18.10
# BACKEND_PORT=8000

# ===========================================
# MQTT CONFIGURATION
# ===========================================
# MQTT Broker Settings
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_WS_PORT=9001

# MQTT Authentication (optional)
# MQTT_USER=your_mqtt_user
# MQTT_PASSWORD=your_mqtt_password

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Application Environment
NODE_ENV=production

# Frontend Port (for development)
# VITE_PORT=5173

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ===========================================
# SECURITY SETTINGS
# ===========================================
# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session Settings
# SESSION_SECRET=your-secret-key-here
# SESSION_TIMEOUT=3600000

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug mode
# DEBUG=true

# Enable hot reload (development only)
# HOT_RELOAD=true

# ===========================================
# PRODUCTION OPTIMIZATIONS
# ===========================================
# Enable compression
# COMPRESSION=true

# Cache settings
# CACHE_TTL=3600
# STATIC_CACHE_TTL=86400

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# External API endpoints
# EXTERNAL_API_BASE_URL=https://api.external-service.com
# EXTERNAL_API_KEY=your-external-api-key

# ===========================================
# BACKUP SETTINGS
# ===========================================
# Backup configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
